<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.demo.practice.widget.CustomViewGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/zoro"
            android:id="@+id/zoro"
            android:tag="索隆"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/sanji"
            android:id="@+id/sanji"
            android:tag="山治"

            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/luffy"
            android:id="@+id/luffy"
            android:tag="路飞"
            />

    </com.example.demo.practice.widget.CustomViewGroup>

    <android.support.v7.widget.RecyclerView
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/black"
        android:id="@+id/layout_manage_rv">

    </android.support.v7.widget.RecyclerView>

    <com.example.demo.practice.widget.PopupLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="32sp"
            android:id="@+id/stop_tv"
            android:tag="停止"
            android:text="停止"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:gravity="center"
            android:textSize="32sp"
            android:id="@+id/record_tv"
            android:tag="录播"
            android:text="录播"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="32sp"
            android:id="@+id/start_tv"
            android:tag="开始"
            android:text="开始"/>



    </com.example.demo.practice.widget.PopupLayout>


</LinearLayout>